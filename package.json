{
  "name": "blazor-github-page",
  "description": "GitHub Pages Blazor WASM",
  "version": "3.1.0",
  "author": "",
  "private": true,
  "homepage": "https://github.com/na1307/blazor-github-pages",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/na1307/blazor-github-pages.git"
  },
  "bugs": {
    "url": "https://github.com/na1307/blazor-github-pages/issues"
  },
  "keywords": [
    "actions",
    "blazor",
    "pages"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "bundle": "npm run package",
    "ci-test": "jest",
    "package": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "sonarscanner": "sonar-scanner",
    "test": "jest"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@vercel/ncc": "^0.38.4",
    "jest": "^30.1.3",
    "sonarqube-scanner": "^4.3.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  }
}
